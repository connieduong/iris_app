<div class="container">

<h3>Log In</h3>
<%= form_for :login, {url: login_path} do |f| %>
  <div class="form-group in-line ">
    <%= f.email_field :email, placeholder: "Email", class: "in-line" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, placeholder: "Password", class: "in-line" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Log In', class: "btn btn-primary" %>
  </div>

<% end %>
</div>
